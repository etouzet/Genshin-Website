{% extends 'base.html.twig' %}

{% block title %}Record index{% endblock %}

{% block body %}
    <h1>Record index</h1>

    {% if app.user %}
    {% if app.user.getRoles[0] == "ROLE_ADMIN" %}
    <a href="{{ path('e_t_record_new') }}">Ajouter un record</a>
    {% endif %}
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Player</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>
                <td>{{ record.id }}</td>
                <td>{{ record.content }}</td>
                <td>{{ record.player }}</td>
                <td>
                    {% if app.user %}
                    {% if app.user.getRoles[0] == "ROLE_ADMIN" %}
                        <a href="{{ path('e_t_record_show', {'id': record.id}) }}">show</a>
                        <a href="{{ path('e_t_record_edit', {'id': record.id}) }}">edit</a>
                    {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
