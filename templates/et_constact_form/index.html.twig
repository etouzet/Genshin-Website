{% extends 'base.html.twig' %}

{% block title %}ContactForm index{% endblock %}

{% block body %}
    <h1>ContactForm index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mail</th>
                <th>Object</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact_form in contact_forms %}
            <tr>
                <td>{{ contact_form.id }}</td>
                <td>{{ contact_form.mail }}</td>
                <td>{{ contact_form.object }}</td>
                <td>{{ contact_form.content }}</td>
                <td>
                    <a href="{{ path('e_t_constact_form_show', {'id': contact_form.id}) }}">show</a>
                    <a href="{{ path('e_t_constact_form_edit', {'id': contact_form.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('e_t_constact_form_new') }}">Create new</a>
{% endblock %}
